<h1>Contact us</h1>

<form role="form">
  <%= form_tag do %>
    <div class="form-group">
      <%= label_tag(:name, "Name:") %>
      <%= text_field_tag(:name, "Please enter your name", class: 'form-control') %>
    </div>
  <br>

    <div class="form-group">
      <%= label_tag(:email, "Email:") %>
      <%= text_field_tag(:email, "Please enter your email", class: 'form-control') %>
    </div>
  <br>

    <div class="form-group">
      <%= label_tag(:message, "Message:") %>
      <%= text_area_tag(:message, "Please enter your message", size: "24x6", class: 'form-control') %>
    </div>

  <br>

    <%= submit_tag("Send", class: "btn btn-large btn-primary") %>

  <% end %>
</form>