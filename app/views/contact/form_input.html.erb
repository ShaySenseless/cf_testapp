<h1>Contact us</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag do %>
      
      <%= label_tag(:name, "Name:") %>
      <%= text_field_tag(:name) %>

      <br>

      <%= label_tag(:email, "Email:") %>
      <%= text_field_tag(:email) %>

      <br>
      
      <%= label_tag(:message, "Message:") %>
      <%= text_area_tag(:message, "Please enter your message", size: "24x6") %>
      
      <br>
      <%= submit_tag("Send", class: "btn btn-large btn-primary") %>

    <% end %>
  </div>
</div>